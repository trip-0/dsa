#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<ctype.h>

#define sz 5


void push(int q[], int *r, int *f, int *count, int item)
{
    if(*count == sz)  
    {
        printf("Queue is overflow\n");
    }
    else
    {
        *r = (*r + 1) % sz;  
        q[*r] = item;
        *count = *count + 1;
    }
}


void pop(int q[], int *f, int *count)
{
    if(*count == 0)  
    {
        printf("Queue is underflow\n");
    }
    else
    {
        printf("%d is deleted\n", q[*f]);  
        *f = (*f + 1) % sz;  
        *count = *count - 1;
    }
}


void display(int q[], int f, int count)
{
    int i, j;
    if(count == 0)  
    {
        printf("Queue is empty\n");
    }
    else
    {
        printf("Content of the queue are:\n");
        j = f;
        for(i = 0; i < count; i++)  
        {
            printf("%d\n", q[j]);
            j = (j + 1) % sz;  
        }
    }
}

void main()
{
    int q[sz], r = -1, f = 0, count = 0, item, ch;

    for(;;) 
    {
        printf("Enter 1:insert 2:delete 3:display else:exit\n");
        scanf("%d", &ch);

        switch(ch)
        {
            case 1:
                printf("Enter the item to be inserted: ");
                scanf("%d", &item);  
                push(q, &r, &f, &count, item);  
                break;
            case 2:
                pop(q, &f, &count);  
                break;
            case 3:
                display(q, f, count);  
                break;
            default:
                exit(0);  
        }
    }
}
